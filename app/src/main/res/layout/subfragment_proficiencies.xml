<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:weightSum="60">

    <com.seanoxford.resume.customviews.AutoResizeTextView
        style="@style/InfoTextHeaderStyle"
        android:id="@+id/tv_prof_software"
        android:text="Software" />

    <com.seanoxford.resume.customviews.AutoResizeTextView
        android:id="@+id/tv_prof_software_detail"
        style="@style/InfoTextDetailStyle"
        android:text="Adobe Photoshop CS6,\nAndroid Studio, Eclipse, Git, Gradle" />

    <com.seanoxford.resume.customviews.AutoResizeTextView
        android:id="@+id/tv_prof_languages"
        style="@style/InfoTextHeaderStyle"
        android:text="Languages" />

    <com.seanoxford.resume.customviews.AutoResizeTextView
        android:id="@+id/tv_prof_languages_detail"
        style="@style/InfoTextDetailStyle"
        android:text="Java, HTML/CSS, JSP,\nXML, SQLite, PHP" />

    <com.seanoxford.resume.customviews.AutoResizeTextView
        android:id="@+id/tv_prof_web"
        style="@style/InfoTextHeaderStyle"
        android:text="Web" />

    <com.seanoxford.resume.customviews.AutoResizeTextView
        android:id="@+id/tv_prof_web_detail"
        style="@style/InfoTextDetailStyle"
        android:text="WordPress, FTP, Google App Engine,\nWeb Development (~23,800,000 hits)" />

</LinearLayout>